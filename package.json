{
  "name": "remitter",
  "version": "0.4.4",
  "private": false,
  "description": "A TypeScript friendly event emitter with easy re-emitting events.",
  "license": "MIT",
  "author": "CRIMX <straybugs@gmail.com> (https://github.com/crimx/)",
  "repository": "crimx/remitter",
  "sideEffects": false,
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "unpkg": "./dist/index.umd.js",
  "jsdelivr": "./dist/index.umd.js",
  "types": "./dist/index.d.ts",
  "files": [
    "src",
    "dist"
  ],
  "scripts": {
    "prepublishOnly": "npm run build",
    "lint": "eslint && prettier --check .",
    "docs": "typedoc --options typedoc.json",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:ci": "tsc --noEmit && vitest --coverage --coverage.reporter=lcov --coverage.include=src/**",
    "build": "tsup --onSuccess \"node scripts/build-umd.mjs\"",
    "build:min": "MINIFY=true tsup && node scripts/gzip.mjs",
    "release": "commit-and-tag-version"
  },
  "devDependencies": {
    "@eslint/js": "^9.12.0",
    "@types/node": "^22.7.5",
    "@vitest/coverage-v8": "^2.1.3",
    "@wopjs/disposable": "^0.1.8",
    "commit-and-tag-version": "^12.5.0",
    "eslint": "^9.12.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-import": "^2.31.0",
    "gzip-size": "^7.0.0",
    "prettier": "^3.3.3",
    "pretty-bytes": "^6.1.1",
    "rollup": "^4.24.0",
    "tsup": "^8.3.0",
    "typedoc": "^0.26.9",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.9.0",
    "vitest": "^2.1.2",
    "yoctocolors": "^2.1.1"
  }
}
